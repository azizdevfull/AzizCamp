<div class="container">
  <h1 class="text-center">Moderator</h1>
  <%= render "moderator/nav_links" %>
  <div class="text-center mt-5">
    <div class="btn-group">
      <%= link_to "Edit", edit_poster_path(@poster), class:"btn btn-warning" %>
      <%= button_to "Delete", @poster, method: :delete, data: { confirm: "Are you sure?" }, class:"btn btn-danger" %>
    </div>
  </div>
  <div class="row mt-1">
    <p>
      <strong>Title:</strong> <%= @poster.title %>
    </p>
  </div>
  <div class="row mt-1">
    <p>
      <strong>Views:</strong> <%= @poster.views %>
    </p>
  </div>
  <div class="row mt-1">
    <p><strong>Author:</strong>
      <%= "#{@poster.user.email} | #{@poster.user.username} | #{pluralize(@poster.user.views, "View")}" %>
    </p>
  </div>
  <div class="row mt-1">
    <strong>Body:</strong> <%= @poster.body %>
  </div>
  <div class="row mt-1">
    <strong><%= pluralize(@poster.pcomments.count, "Comment") %>:</strong>
    <% @poster.pcomments.each do |comment| %>
      <div class="row mt-1">
       <p>Comment Author: <strong><%= comment.user.username %></strong> </p>
       <p>Comment name: <strong><%= comment.name %></strong> </p> 
      </div>
    <% end %>
  </div>
</div>